public class Test065{
	public static void main(String[] args){
		int kg=0;
		int xx=7;
		int rows=5;
		for(int i=4;i>0;i--){
			for(int j=1;j<=kg;j++){
				System.out.print(" ");
			}
			if(i!=1&&i!=4){
				System.out.print("*");
				for(int j=rows;j>0;j--){
					System.out.print(" ");
				}
				System.out.print("*");
			}else{
				for(int j=xx;j>0;j--){
					System.out.print("*");
				}
			}
			System.out.println();
			rows-=2;
			kg++;
			xx-=2;	
			System.out.print("\n");
		}
	}
}